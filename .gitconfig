[user]
	name = richard
	email = richard.tsai@fortmedia.com
[http]
	sslVerify = false
[alias]
    co = checkout
    cm = commit
    br = branch
    st = status
    sh = stash
    df = diff
[core]
	autocrlf = input
	editor = vim
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[diff]
	tool = vimdiff
